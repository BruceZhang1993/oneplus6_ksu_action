+		up_read(&mm->mmap_sem);
+	}
+#endif
+
+#ifdef CONFIG_KSU_SUSFS_SUS_PROC_FD_LINK
+orig_flow:
+#endif
+
+	if (copy_to_user(buffer, pathname, len))
+		len = -EFAULT;
